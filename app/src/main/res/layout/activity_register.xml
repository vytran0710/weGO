<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <View
        android:id="@+id/ellipse_1"
        android:layout_width="470.49dp"
        android:layout_height="606.21dp"
        android:background="@drawable/ellipse_1"
        android:layout_marginTop="-120dp"
        android:layout_marginLeft="-90dp"
        android:rotation="160"
        />

    <TextView
        android:id="@+id/wego"
        android:layout_width="197dp"
        android:layout_height="89dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:fontFamily="@font/righteous"
        android:gravity="top"
        android:text="@string/wego"
        android:textAppearance="@style/wego"
        />
    <RelativeLayout
        android:id="@+id/register_group"
        android:layout_below="@+id/wego"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#00000000">
        
        <EditText
            android:hint="Username"
            android:inputType="text"
            android:imeOptions="actionGo"
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/username"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/username_icon"/>

        <EditText
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:imeOptions="actionGo"
            android:id="@+id/register_email"
            android:layout_below="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/username"
            android:drawableRight="@drawable/username_icon"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:hint="Password"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:id="@+id/register_password"
            android:layout_below="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/username"
            android:drawableRight="@drawable/password_icon"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:id="@+id/register_confirm_password"
            android:layout_below="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/username"
            android:drawableRight="@drawable/password_icon"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/register_confirm_password"
            android:layout_marginTop="27dp"
            android:backgroundTint="@color/login_button"
            android:text="REGISTER"
            />

        <Button
            android:id="@+id/to_login_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/register_button"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/login_button"
            android:text="BACK TO LOGIN"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_login_button"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By registering, you agreed our "/>

            <TextView
                android:id="@+id/terms_of_service_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term of Service"
                android:textColor="@color/purple_200"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>