<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewPostShow">

<!--    TODO: add more imageviews-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/review_post_update_date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update_date"></TextView>
            <ImageView
                android:id="@+id/review_post_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ></ImageView>
            <TextView
                android:id="@+id/review_post_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:gravity="center_horizontal"></TextView>
            <TextView
                android:id="@+id/review_post_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="@color/teal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/like_btn_reviewpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/like"></ImageButton>

                <ImageButton
                    android:id="@+id/cmt_btn_reviewpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/cmt"></ImageButton>

                <ImageButton
                    android:id="@+id/map_btn_reviewpost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/map_in_reviewpost"></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>