<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent">

    <LinearLayout
        android:paddingTop="15dp"
        android:id="@+id/item_review_post"
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:background="@drawable/round_edge"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/update_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="update date"></TextView>

        <RelativeLayout
            android:layout_width="346dp"
            android:layout_height="325dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginBottom="1dp"
                android:background="#A6000000"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="71dp"
            android:background="@drawable/teal_circle"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like_btn"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/like"></ImageButton>

            <ImageButton
                android:id="@+id/cmt_btn"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/cmt"></ImageButton>

            <ImageButton
                android:id="@+id/map_btn"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/map"></ImageButton>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>